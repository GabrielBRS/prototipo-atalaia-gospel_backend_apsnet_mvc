@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ecommerce_aspnetmvc_entityframework.Models.Cliente

@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />

    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />

    <link href="/css/styles.css" rel="stylesheet" />

</head>

<body class="d-flex flex-column">

    <main class="flex-shrink-0">
        <!-- Page content-->
        <section class="py-5">
            <div class="container px-5">
                <form asp-action="Login" asp-controller="Home" method="post">
                    @if (ViewData["MSG_E"] != null)
                    {
                        <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                    }

                    @if (TempData["MSG_S"] != null)
                    {
                        <p class="alert alert-success">@TempData["MSG_S"]</p>
                    }

                    <!-- Contact form-->
                    <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                        <div class="text-center mb-5">
                            <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                            <h1 class="fw-bolder">Entrar</h1>
                            <p class="lead fw-normal text-muted mb-0">Seja bem vindo a maior plataforma cristã</p>
                        </div>
                        <div class="row gx-5 justify-content-center">
                            <div class="col-lg-8 col-xl-6">

                                <div class="form-floating mb-3">
                                    <input class="form-control" id="email" type="email" asp-for="Email" placeholder="name@example.com" required="" />
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email"></span>

                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" id="senha" type="password" asp-for="Senha" placeholder="********" required="" />
                                    <label asp-for="Senha">Senha</label>
                                    <span asp-validation-for="Senha"></span>

                                    <div class="border-top card-body text-center">
                                        <a asp-controller="Home" asp-action="CadastroCliente">Não tem uma conta?</a>
                                    </div>


                                    <div class="form-floating mb-3">
                                        <button class="btn btn-primary btn-toolbar" type="submit">Entrar</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
</body>