@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ecommerce_aspnetmvc_entityframework.Models.Cliente

@{
    ViewData["Title"] = "Cadastro";
}

<head>
    <meta charset="utf-8" />

    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />

    <link href="/css/styles.css" rel="stylesheet" />

</head>

<body class="d-flex flex-column">
    
        <main class="flex-shrink-0">
            <!-- Page content-->
            <section class="py-5">
                <div class="container px-5">
                    <form asp-action="CadastroCliente" asp-controller="Home" method="post">
                        @if (TempData["MSG_S"] != null)
                        {
                            <p class="alert alert-success">@TempData["MSG_S"]</p>
                        }

                        <!-- Contact form-->
                        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                            <div class="text-center mb-5">
                                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                                <h1 class="fw-bolder">Cadastre-se</h1>
                                <p class="lead fw-normal text-muted mb-0">Você está tomando a decisão certa em seguir a gente</p>
                            </div>
                            <div class="row gx-5 justify-content-center">
                                <div class="col-lg-8 col-xl-6">



                                    <!-- Name input-->
                                    <div class="form-floating mb-3">
                                        <input class="form-control" type="text" asp-for="Nome" placeholder="Escreva seu nome..." required="" />
                                        <label asp-for="Nome">Nome completo</label>
                                        <span asp-validation-for="Nome"></span>

                                    </div>
                                    <!-- Email address input-->
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="email" type="email" asp-for="Email" placeholder="name@example.com" required="" />
                                        <label asp-for="Email">Email</label>
                                        <span asp-validation-for="Email"></span>

                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="senha" type="password" asp-for="Senha" placeholder="********" required="" />
                                        <label asp-for="Senha">Senha</label>
                                        <span asp-validation-for="Senha"></span>

                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" type="text" asp-for="CPF" placeholder="000.000.000-00" required="" />
                                        <label class="form-check-label" asp-for="CPF">CPF</label>
                                        <span asp-validation-for="CPF"></span>

                                    </div>

                                    <!-- Phone number input-->
                                    <div class="form-floating mb-3">
                                        <input class="form-control" type="tel" asp-for="Telefone" placeholder="(123) 456-7890" required="" />
                                        <label asp-for="Telefone">Telefone</label>
                                        <span asp-validation-for="Telefone"></span>

                                    </div>

                                    <div class="form-floating mb-3">
                                        <input class="form-control" type="date" asp-for="Nascimento" placeholder="20/05/1995" required="" />
                                        <label asp-for="Nascimento">Nascimento</label>
                                        <span asp-validation-for="Nascimento"></span>

                                    </div>

                                    <div class="form-floating mb-3">

                                        <input class="custom-radio" type="radio" asp-for="Sexo" value="M" />
                                        <span class="form-check-label">Masculino</span>

                                        <input class="custom-radio" type="radio" asp-for="Sexo" value="F" />
                                        <span class="form-check-label">Feminino</span>

                                        <span asp-validation-for="Sexo"></span>
                                    </div>


                                    <div class="border-top card-body text-center">
                                        <a asp-controller="Home" asp-action="Login">Já tem uma conta?</a>
                                    </div>


                                    <div class="form-floating mb-3">
                                        <button class="btn btn-primary btn-toolbar" type="submit">Cadastrar</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                     </form>
                 </div>
             </section>
         </main>
</body>
  
