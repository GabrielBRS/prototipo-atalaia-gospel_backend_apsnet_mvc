@model ecommerce_aspnetmvc_entityframework.Models.Categoria;
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form asp-action="Atualizar" asp-controller="Categoria" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome da categoria">
        <span asp-validation-for="Nome" class="fw-bold"></span>
    </div>

    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" class="form-control" aria-describedby="emailHelp" placeholder="Digite o slug da categoria">
        <span asp-validation-for="Slug" class="fw-bold"></span>
    </div>

    <div class="form-group">

        <label asp-for="CategoriaPaiId">Categoria Pai</label>

        <select asp-for="CategoriaPaiId" class="form-control" aria-describedby="emailHelp" asp-items="ViewBag.Categorias">
            <option value="">Selecione</option>
        </select>

        <span asp-validation-for="CategoriaPaiId" class="fw-bold"></span>
    </div>
    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-primary">Enviar</button><a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</form>