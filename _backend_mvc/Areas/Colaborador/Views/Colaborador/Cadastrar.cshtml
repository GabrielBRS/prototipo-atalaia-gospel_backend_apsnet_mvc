@model ecommerce_aspnetmvc_entityframework.Models.Colaborador;
@{
    ViewData["Title"] = "Cadastrar";
}

@{
    //TODO: ERRO AO CADASTRAR O BROWSER DISSE QUE É NO JAVASCRIPT;
}
<h1>Cadastrar</h1>

<form asp-action="Cadastrar" asp-controller="Colaborador" method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome do colaborador">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Digite o email do colaborador">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-primary ">Enviar</button><a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</form>