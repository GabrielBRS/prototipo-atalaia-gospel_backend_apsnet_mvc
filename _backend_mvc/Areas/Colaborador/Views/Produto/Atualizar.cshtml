@model ecommerce_aspnetmvc_entityframework.Models.Product;
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<form method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CategoriaId"></label>
            <select asp-for="CategoriaId" class="form-control" aria-describedby="emailHelp" asp-items="ViewBag.Categorias">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Digite o nome do produto" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Quantidade">Quantidade</label>
            <div class="input-group mb-2">
                <input asp-for="Quantidade" type="number" class="form-control" aria-describedby="emailHelp" placeholder="Digite a quantidade dos produtos" />
                <div class="input-group-prepend">
                    <div class="input-group-text">unid</div>
                </div>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Valor">Valor</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="Valor" type="text" class="form-control dinheiro" aria-describedby="emailHelp" placeholder="Digite o preço do produto" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
    </div>
    <h2>Frete</h2>
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Peso">Peso</label>
            <div class="input-group mb-2">
                <input asp-for="Peso" type="number" class="form-control" />
                <div class="input-group-prepend">
                    <div class="input-group-text">Kg</div>
                </div>
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Largura">Largura</label>
            <div class="input-group mb-2">
                <input asp-for="Largura" type="number" class="form-control" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
                <span asp-validation-for="Largura" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Altura">Altura</label>
            <div class="input-group mb-2">
                <input asp-for="Altura" type="number" class="form-control" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Comprimento">Comprimento</label>
            <div class="input-group mb-2">
                <input asp-for="Comprimento" type="number" class="form-control" />
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
                <span asp-validation-for="Comprimento" class="text-danger"></span>
            </div>
        </div>
    </div>
    @{
        List<Imagem> Imagens = new List<Imagem>();
        if (Model != null)
        {
            Imagens = Model.Imagens.ToList();
        }
        //var Imagens = Model.Imagens;
    }
    <div class="row Imagens">
        @for (int i = 0; i < 12; i++)
        {
            @if (Imagens.ElementAtOrDefault(i) != null)
            {
                <div class="col-md-2">
                    <input type="file" class="input-file" />
                    <div class="container-img-thumbnail">
                        <span class="helper"></span><img src="@Imagens.ElementAtOrDefault(i).Caminho" class="img-thumbnail img-upload" />
                    </div>
                    <div class="btn btn-danger btn-imagem-excluir">X</div>
                    <input type="text" name="imagem" value="@Imagens.ElementAtOrDefault(i).Caminho" />
                </div>
            }
            else
            {
                <div class="col-md-2">
                    <input type="file" class="input-file" />
                    <div class="container-img-thumbnail">
                        <span class="helper"></span><img src="~/img/image_icon_padrão.png" class="img-thumbnail img-upload" />
                    </div>
                    <div class="btn btn-danger btn-imagem-excluir btn-ocultar">X</div>
                    <input type="text" name="imagem" />
                </div>
            }
        }
    </div>

    <div class="form-floating mb-3">
        <button type="submit" class="btn btn-primary">Enviar</button><a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</form>